@page "/profile"

<PageTitle>Profil</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container mt-4">
            <div class="badge bg-light text-dark mb-2">
                <h1 class="page-title">Profil Pengguna</h1>
            </div>

            <!-- Date and Add RDP Button -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <!-- Date -->
                    <span class="badge bg-light text-dark mt-2">
                        <span>
                            <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        </span>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>

            <div class="colum">
                <!-- User Details -->
                <div class="col-md-12">
                    <div class="card shadow-sm p-4 mb-4">
                        <p><strong>Nama Lengkap</strong>: <span>@context.User.Identity.Name</span></p>
                        <p><strong>Nopek</strong>: <span>@context.User.FindFirst("Nopek")?.Value.Replace("Nopek: ", "") </span></p>
                        <p><strong>Posisi dalam Role Level (PRL)</strong>: <span>@context.User.FindFirst("PRL")?.Value.Replace("PRL: ", "")</span></p>
                        <p><strong>Poin</strong>: <span>@context.User.FindFirst("Points")?.Value.Replace("Points: ", "")</span></p>
                        <p><strong>Section</strong>: <span>@context.User.FindFirst("Section")?.Value.Replace("Section: ", "")</span></p>
                        <p><strong>Position</strong>: <span>@context.User.FindFirst("Position")?.Value.Replace("Position: ", "")</span></p>
                    </div>
                </div>

                <!-- RDP Details -->
                <div class="col-md-12">
                    <div class="card shadow-sm p-4 mb-4">
                        <h4 class="text-center text-dark">Status Kepemilikan RDP</h4>
                        <hr />
                        <p><strong>Lokasi</strong>: Komperta Gunung Simping GS04, Cilacap</p>
                        <p><strong>Status Penggunaan</strong>: Aktif</p>
                        <p><strong>Tanggal Mulai Kepemilikan</strong>: 28 Agustus 2024</p>
                        <div class="auction-button-container mt-4 d-flex justify-content-center gap-3">
                            <a href="/RDPegawai" class="text-decoration-none">
                                <button class="btn" style="background-color: #358DC7; color: white;">Cek Detail</button>
                            </a>
                            <a href="/admin/LaporanPemilik-pegawai" class="text-decoration-none">
                                <button class="btn" style="background-color: #EC4A50; color: white;">Laporkan Kerusakan</button>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>
