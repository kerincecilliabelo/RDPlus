@page "/formperfasilitas"
@inject IJSRuntime js

<PageTitle>Data RDP / Perbarui Data RDP</PageTitle>

<div class="container mt-4">
    <div class="modal-content" style="border-radius: 12px; box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); padding: 20px;">
        <h3 class="text-center">Mesin Cuci</h3>
        <form>
            <!-- Input Kode -->
            <div class="mb-3">
                <label for="kode"><b>Kode</b></label>
                <input type="text" id="kode" class="form-control" style="border: 1px solid #2B6CB0;" placeholder="Masukkan kode fasilitas">
            </div>

            <!-- Pilihan Kondisi -->
            <div class="mb-3">
                <label><b>Kondisi</b></label><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="layak" name="kondisi" value="layak" checked />
                    <label class="form-check-label" for="layak">Layak</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="tidaklayak" name="kondisi" value="tidaklayak" />
                    <label class="form-check-label" for="tidaklayak">Tidak Layak</label>
                </div>
                <div class="mt-2">
                    <span class="text-danger" style="font-size: 0.85rem;">Jumlah pada SK: 5</span>
                </div>
            </div>

            <!-- Tombol Tambahkan -->
            <div class="text-center mb-3">
                <button type="button" class="btn btn-success" style="background-color: #8CC63E;">Tambahkan</button>
            </div>
        </form>

        <!-- Tabel Data Fasilitas -->
        <table class="table table-striped">
            <thead style="background-color: #000000; color: #FFFFFF;">
                <tr>
                    <th>Kode</th>
                    <th>Kondisi</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <tr style="background-color: #E5F4C1;">
                    <td>0CENI290</td>
                    <td>Layak</td>
                    <td>
                        <button type="button" class="btn btn-light">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
                <tr style="background-color: #EDFFC3;">
                    <td>0CENI291</td>
                    <td>Layak</td>
                    <td>
                        <button type="button" class="btn btn-light">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Total dan Tombol Simpan -->
        <div class="d-flex flex-column align-items-end mt-3">
            <span class="mb-2"><b>Jumlah:</b> 2</span>
        </div>
        <div class="text-center">
            <a href="/perbaruiRDPAM2" class="btn btn-primary">Simpan</a>
            <a href="/perbaruiRDPAM1" class="btn btn-secondary">Batal</a>
        </div>
    </div>
</div>

