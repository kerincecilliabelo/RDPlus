@page "/"

<PageTitle>Pertamina Dashboard</PageTitle>

<AuthorizeView>
    <NotAuthorized>
        <div class="row">
            <div class="col-lg-4 offset-lg-4 pt-4 pb-4 border" style="background-color: white">
                <div class="mb-3 text-center flex-column">
                    <img src="/images/pertamina.png" style="max-height:4rem; margin-bottom:3rem; margin-top: 3rem" />
                    <h3 style="margin-bottom:3rem;">Access Denied</h3>
                </div>
                <div class="mb-3 text-center">
                    <p>You do not have the necessary permissions to access this page.</p>
                </div>
                <div class="mb-3 d-grid gap-2 text-center">
                    <a href="/login" class="btn btn-primary">Go to Login</a>
                </div>
            </div>
        </div>
    </NotAuthorized>
    <Authorized>

        <div class="container mt-4">
            <div class="badge bg-light text-dark mb-2">
                <h1>Dashboard @context.User.FindFirst("Role")?.Value.Replace("Role: ", "")</h1>
            </div>

            <!-- Date and Add RDP Button -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <!-- Date -->
                    <span class="badge bg-light text-dark mt-2">
                        <span>
                            <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        </span>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>

            <!-- Cards for RDP Info -->
            <div class="row text-center mb-4">
                <div class="col-md-3">
                    <a href="/datardphc" class="text-decoration-none">
                        <div class="card shadow" style="background-color: #3075BB; color: white; border-radius: 15px; position: relative;">
                            <div class="card-body" style="text-align: left; position: relative;">

                                <p style="font-size: 14px; margin: 0;">Total RDP</p>

                                <p style="font-size: 64px; font-weight: bold; margin: 0px 0 0 0;">778</p>

                                <img src="/images/home-rdptotal.png" alt="Home Icon" style="position: absolute; top: 60px; right: 15px; width: 100px; height: 100px; opacity: 0.5;">


                            </div>
                        </div>
                    </a>
                </div>




                <div class="col-md-3">
                    <div class="card shadow" style="background-color: #F6C80C; color: white; border-radius: 15px;">
                        <div class="card-body" style="text-align: left; position: relative;">

                            <p style="font-size: 14px; margin: 0;">RDP Layak</p>

                            <p style="font-size: 64px; font-weight: bold; margin: 0px 0 0 0;">778</p>

                            <img src="/images/home-rdplayak.png" alt="Home Icon" style="position: absolute; top: 60px; right: 15px; width: 90px; height: 100px; opacity: 0.5;">


                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow" style="background-color: #E7242B; color: white; border-radius: 15px">
                        <div class="card-body" style="text-align: left; position: relative;">

                            <p style="font-size: 14px; margin: 0;">RDP Tidak Layak</p>

                            <p style="font-size: 64px; font-weight: bold; margin: 0px 0 0 0;">778</p>

                            <img src="/images/home-rdptidak.png" alt="Home Icon" style="position: absolute; top: 60px; right: 15px; width: 100px; height: 100px; opacity: 0.5;">


                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <a href="/Rdptersedia" class="text-decoration-none">
                        <div class="card shadow" style="background-color: #A2CE40 ; color: white; border-radius: 15px;">
                            <div class="card-body" style="text-align: left; position: relative;">

                                <p style="font-size: 14px; margin: 0;">RDP Tersedia</p>

                                <p style="font-size: 64px; font-weight: bold; margin: 0px 0 0 0;">778</p>

                                <img src="/images/home-rdptersedia.png" alt="Home Icon" style="position: absolute; top: 60px; right: 15px; width: 100px; height: 100px; opacity: 0.5;">


                            </div>
                        </div>
                    </a>
                </div>

            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="card" style="border-radius: 15px">
                        <div class="card-body">
                            <div>
                                <img src="images/DemografiRDP.png" alt="Status RDP" class="status-image" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="card" style="border-radius: 15px; padding: 0;">
                        <div class="card-body" style="padding: 0;">
                            <p style="font-size: 16px; margin-bottom: 12px; font-weight: bold; padding: 12px;">RDP Tersedia</p>

                            <div class="card mb-3" style="background-color: #358DC7; border-radius: 15px 15px 0 0; padding: 0;">
                                <div class="card-body p-0">

                                    <div class="row">
                                        <div class="col">
                                            <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">Gunung Simping</p>
                                        </div>
                                        <div class="col d-flex justify-content-end">
                                            <p class="mb-6" style="margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic">
                                                Periode Lelang
                                                <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold">
                                                    NOT SET
                                                </span>
                                                <span>
                                                    <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; width: 20px; margin-left: 1rem;" />
                                                </span>
                                            </p>
                                        </div>

                                    </div>

                                    <table class="table table-striped text-center m-0" style="width: 100%;">
                                        <thead style="background-color: black; color: white;">
                                            <tr style="font-weight: normal; font-size: 14px">
                                                <th>No</th>
                                                <th>Alamat</th>
                                                <th>No RDP</th>
                                                <th>Tipe RDP</th>
                                                <th>Cluster</th>
                                                <th>Status RDP</th>
                                                <th>Kondisi</th>
                                                <th>Aksi</th>
                                                <th>Tawarkan</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var rdp in rdpData)
                                            {
                                                <tr style="background-color: @rdp.RowColor; font-size: 14px">
                                                    <td>@rdp.No</td>
                                                    <td>@rdp.Alamat</td>
                                                    <td>@rdp.NoRDP</td>
                                                    <td>@rdp.TipeRDP</td>
                                                    <td>@rdp.Cluster</td>
                                                    <td>@rdp.StatusRDP</td>
                                                    <td>@rdp.Kondisi</td>
                                                    <td>
                                                        <NavLink class="btn btn-light" href="/">
                                                            <span class="bi bi-eye" aria-hidden="true"></span>
                                                        </NavLink>
                                                        <NavLink class="btn btn-light" href="/">
                                                            <span class="bi bi-filetype-pdf" aria-hidden="true"></span>
                                                        </NavLink>
                                                    </td>
                                                    <td>
                                                        <input type="checkbox" id="bid" name="bidRdp" value="kosong" class="form-check-input">
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </Authorized>
</AuthorizeView>

